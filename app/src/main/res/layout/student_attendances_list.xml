<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_background"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Nume student"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/fadcd5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/student_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numar matricol"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/fadcd5"
        android:layout_below="@id/student_name"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:id="@+id/student_id_number" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prezente curs: "
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="@color/fadcd5"
        android:layout_below="@id/student_id_number"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:id="@+id/course_attendances" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prezente seminar: "
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="@color/fadcd5"
        android:layout_below="@id/course_attendances"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/seminar_attendances" />

</RelativeLayout>