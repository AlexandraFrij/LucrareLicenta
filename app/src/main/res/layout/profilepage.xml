<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:id="@+id/profilePage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profilePic"
        android:id="@+id/profilePic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf=""
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileName"
        app:layout_constraintStart_toStartOf="@id/profilePic"
        app:layout_constraintEnd_toEndOf="@+id/profilePic"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        android:text="Nume Utilizator Unic"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileEmail"
        app:layout_constraintStart_toStartOf="@+id/profileName"
        app:layout_constraintEnd_toEndOf="@+id/profileName"
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        android:text="nume@gmail.com"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        app:layout_constraintStart_toStartOf="@+id/profileEmail"
        app:layout_constraintEnd_toEndOf="@+id/profileEmail"
        app:layout_constraintTop_toBottomOf="@+id/profileEmail"
        android:text="Student"
        android:textColor="@color/white"
        android:textSize="18dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/logoffBtn"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/status"
        app:layout_constraintEnd_toEndOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/status"
        android:text="Deconectare    "
        android:textColor="@color/a1b0c1a"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:drawableTint="@color/a1b0c1a"
        android:background="@drawable/rounded_buttons"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editProfileBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/logoffBtn"
        app:layout_constraintEnd_toEndOf="@+id/logoffBtn"
        app:layout_constraintTop_toBottomOf="@+id/logoffBtn"
        android:text="Editare profil    "
        android:textColor="@color/a1b0c1a"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawableTint="@color/a1b0c1a"
        android:background="@drawable/rounded_buttons"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_bar"
        app:itemIconTint="@color/fadcd5"
        app:itemTextColor="@color/fadcd5"
        android:background="@drawable/gradient_background_menu"
        />
</androidx.constraintlayout.widget.ConstraintLayout>