<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background_menu"
    android:id="@+id/profilePage"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfilePage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/profile_pic"
        android:id="@+id/profilePic"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileName"
        app:layout_constraintStart_toStartOf="@id/profilePic"
        app:layout_constraintEnd_toEndOf="@+id/profilePic"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="23dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileEmail"
        app:layout_constraintStart_toStartOf="@+id/profileName"
        app:layout_constraintEnd_toEndOf="@+id/profileName"
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        android:textColor="@color/white"
        android:textSize="16dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goBackBtn"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:text="."
        android:layout_marginTop="10dp"
        android:textColor="@color/a4b2138"
        android:drawableEnd="@drawable/baseline_arrow_back_ios_24"
        android:drawableTint="@color/fadcd5"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/logoffBtn"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/profileEmail"
        app:layout_constraintEnd_toEndOf="@+id/profileEmail"
        app:layout_constraintTop_toBottomOf="@+id/profileEmail"
        android:text="Deconectare    "
        android:textColor="@color/a1b0c1a"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:drawableTint="@color/a1b0c1a"
        android:background="@drawable/rounded_buttons"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editProfileBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/logoffBtn"
        app:layout_constraintEnd_toEndOf="@+id/logoffBtn"
        app:layout_constraintTop_toBottomOf="@+id/logoffBtn"
        android:text="Editare profil    "
        android:textColor="@color/a1b0c1a"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawableTint="@color/a1b0c1a"
        android:background="@drawable/rounded_buttons"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/deleteAccBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/editProfileBtn"
        app:layout_constraintEnd_toEndOf="@+id/editProfileBtn"
        app:layout_constraintTop_toBottomOf="@+id/editProfileBtn"
        android:text="Sterge cont"
        android:textColor="@color/a1b0c1a"
        android:drawableTint="@color/a1b0c1a"
        android:background="@drawable/rounded_buttons"
        />



</androidx.constraintlayout.widget.ConstraintLayout>