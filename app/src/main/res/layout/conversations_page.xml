<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:id="@+id/conversationsPage"
    tools:context=".ConversationsPage">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_view"
        android:text="Mesaje"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="@color/fadcd5"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search"
        android:drawableLeft="@drawable/baseline_person_search_24"
        android:background="@drawable/rounded_corners_background"
        android:drawableTint="@color/fadcd5"
        android:text="Cautare utilizator"
        android:textStyle="italic"
        android:layout_below="@+id/message_view"
        android:textColor="@color/white"
        android:elevation="20dp"
        android:layout_margin="4dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical|start"
        />
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="84dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/search"
        android:src="@drawable/profile_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personName"
        android:text="Ioana Popa"
        android:textColor="@color/fadcd5"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/material_on_surface_stroke"
        android:layout_toEndOf="@id/profilePic"
        android:layout_alignTop="@id/profilePic"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:text="Cum a fost cursul de azi?"
        android:textColor="@color/fadcd5"
        android:textStyle="italic"
        android:textSize="18dp"
        android:background="@color/material_on_surface_stroke"
        android:layout_toEndOf="@id/profilePic"
        android:layout_below="@id/personName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/profilePic1"
        android:layout_width="84dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:src="@drawable/profile_pic"
        android:layout_below="@id/message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personName1"
        android:text="Maria Neagu"
        android:textColor="@color/fadcd5"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/material_on_surface_stroke"
        android:layout_toEndOf="@id/profilePic1"
        android:layout_alignTop="@id/profilePic1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message1"
        android:text="Ma voi uita eu peste el, sper ca e ok"
        android:textColor="@color/fadcd5"
        android:textStyle="italic"
        android:textSize="18dp"
        android:background="@color/material_on_surface_stroke"
        android:layout_toEndOf="@id/profilePic1"
        android:layout_below="@id/personName1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav_bar"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_bar"
        app:itemIconTint="@color/fadcd5"
        app:itemTextColor="@color/fadcd5"
        android:background="@drawable/gradient_background_menu" />

</RelativeLayout>
