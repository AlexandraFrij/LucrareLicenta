<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
    android:padding="3dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/received_message_linear_layout"
        android:background="@drawable/background_received_messages"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/received_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/fadcd5"
            android:textSize="20dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sent_message_linear_layout"
        android:background="@drawable/background_send_messages"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp">
    <TextView
        android:id="@+id/sent_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/a4b2138"
        android:textSize="20dp" />
    </LinearLayout>


</RelativeLayout>