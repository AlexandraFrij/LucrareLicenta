<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/createStudentAcc"
    tools:context=".CreateStudentAccount">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:text="  Inregistrare student"
        android:textColor="@color/a765d67"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nume:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/lastname"
        android:layout_below="@id/signUp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Prenume:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/firstname"
        android:layout_below="@id/lastname"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="E-mail:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/email"
        android:layout_below="@id/firstname"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Numar matricol:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/studIDNum"
        android:layout_below="@id/email"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="An:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/year"
        android:layout_below="@id/studIDNum"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Grupa:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/group"
        android:layout_below="@id/year"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Parola:"
        android:textColorHint="@color/a1b0c1a"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/password"
        android:layout_below="@id/group"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Confirmare parola:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/confirmPassword"
        android:layout_below="@id/password"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creeaza cont"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="@color/a765d67"
        android:backgroundTint="@color/a2d222f"
        android:id="@+id/createStudAccBtn"
        android:layout_below="@id/confirmPassword"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>