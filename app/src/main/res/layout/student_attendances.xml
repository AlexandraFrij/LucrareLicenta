<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/studentAttendancesPage"
    android:background="@drawable/gradient_background_menu"
    tools:context=".StudentAttendances">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@id/goBackBtn"
        android:text="."
        android:textColor="@color/a6d3c52"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:background="@android:color/transparent"
        android:drawableTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/downloadBtn"
        android:layout_below="@id/goBackBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|start"
        android:text="Descarca tabel"
        android:drawablePadding="10dp"
        android:textColor="@color/fadcd5"
        android:elevation="20dp"
        android:paddingStart="110dp"
        android:drawableStart="@drawable/baseline_download_24"
        android:drawableTint="@color/fadcd5"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/attendances_viewer"
        android:layout_below="@id/downloadBtn"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        />
</RelativeLayout>
