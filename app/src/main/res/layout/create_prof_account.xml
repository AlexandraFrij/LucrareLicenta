<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/createProfAcc"
    tools:context=".CreateProfAccount">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "50dp"
        android:layout_marginBottom="70dp"
        android:text="Inregistrare profesor"
        android:textColor="@color/a765d67"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:gravity="center_vertical"
        android:padding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nume:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/lastname"
        android:layout_below="@id/signUp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Prenume:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/firstname"
        android:layout_below="@id/lastname"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="E-mail:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/email"
        android:layout_below="@id/firstname"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Cod verificare:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/identificationNb"
        android:layout_below="@id/email"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Parola:"
        android:textColorHint="@color/a1b0c1a"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/password"
        android:layout_below="@+id/identificationNb"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/seePassword"
        android:layout_toEndOf="@id/password"
        android:layout_alignTop="@id/password"
        android:drawableTint="@color/a1b0c1a"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Confirmare parola:"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/confirmPassword"
        android:layout_below="@id/password"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/seePasswordConfirmation"
        android:layout_toEndOf="@+id/confirmPassword"
        android:layout_alignTop="@+id/confirmPassword"
        android:drawableTint="@color/a1b0c1a"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creeaza cont"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="@color/a765d67"
        android:backgroundTint="@color/a2d222f"
        android:id="@+id/createProfAccBtn"
        android:layout_below="@id/confirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
</RelativeLayout>