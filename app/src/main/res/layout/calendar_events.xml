<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calendar_events">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adauga eveniment:"
        android:textColor="@color/fadcd5"
        android:textStyle="bold|italic"
        android:id="@+id/addEventsText"
        android:gravity="center"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_events"
        android:layout_below="@+id/addEventsText"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:hint="Introdu eveniment"
            android:textColorHint="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:id="@+id/added_event"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:hint="Alege ora"
            android:textColorHint="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:inputType="none"
            android:id="@+id/added_event_hour"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/added_event"
            android:layout_marginTop="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:text="Adaugare"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/addBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:padding="2dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evenimente din aceasta zi:"
        android:textColor="@color/fadcd5"
        android:textStyle="bold|italic"
        android:id="@+id/existentEventsText"
        android:layout_below="@+id/add_events"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_events"
        android:layout_below="@+id/existentEventsText"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:textColorHint="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:id="@+id/existent_event" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:text="Marcheaza prezenta"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/mark_event" />
    </RelativeLayout>
</RelativeLayout>
