<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calendar_events">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adauga eveniment:"
        android:textColor="@color/fadcd5"
        android:textStyle="bold|italic"
        android:id="@+id/addEventsText"
        android:gravity="center"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_events"
        android:layout_below="@+id/addEventsText"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:hint="Introdu eveniment"
            android:textColorHint="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:id="@+id/added_event" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:text="Adaugare"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/addBtn" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evenimente din aceasta zi:"
        android:textColor="@color/fadcd5"
        android:textStyle="bold|italic"
        android:id="@+id/existentEventsText"
        android:layout_below="@+id/add_events"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_events"
        android:layout_below="@+id/existentEventsText"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:textColorHint="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:id="@+id/existent_event" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:text="Marcheaza prezenta"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/mark_event" />
    </LinearLayout>
</RelativeLayout>
