<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profilePic" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changePhotoBtn"
        android:text="Adauga imagine"
        android:textColor="@color/fadcd5"
        android:textStyle="normal"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawableTint="@color/fadcd5"
        android:background="@color/material_on_surface_stroke"
        android:layout_toEndOf="@id/profilePic"
        android:layout_alignTop="@id/profilePic"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="-30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personalInfo"
        android:text="  Informatii utilizator"
        android:textColor="@color/a765d67"
        android:textStyle="italic"
        android:textSize="20dp"
        android:layout_below="@id/profilePic"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="  Nume Utilizator Unic"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/lastname"
        android:layout_below="@id/personalInfo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="  nume@gmail.com"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/email"
        android:layout_below="@id/lastname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="  Student"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/status"
        android:layout_below="@id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="  Parola: *********"
        android:textColorHint="@color/a1b0c1a"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corners_background"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_below="@id/status"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seePassword"
        android:text="."
        android:textColor="@color/a4b2138"
        android:layout_toEndOf="@id/password"
        android:layout_alignTop="@id/password"
        android:drawableEnd="@drawable/baseline_see_password"
        android:drawableTint="@color/a1b0c1a"
        android:layout_marginLeft="-120dp"
        android:background="@android:color/transparent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveBtn"
        android:background="@drawable/rounded_darker_buttons"
        android:contentDescription="@string/save_button_description"
        android:text="Salveaza"
        android:textSize="15dp"
        android:textColor="@color/fadcd5"
        android:layout_below="@+id/password"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaveBtn"
        android:background="@drawable/rounded_darker_buttons"
        android:text="Iesire"
        android:contentDescription="@string/leave_button_description"
        android:textSize="15dp"
        android:textColor="@color/fadcd5"
        android:layout_below="@+id/password"
        android:layout_marginLeft="60dp"
        android:layout_toEndOf="@id/saveBtn"
        android:layout_alignTop="@id/saveBtn"/>

</RelativeLayout>
