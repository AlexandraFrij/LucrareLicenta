<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_calendar_events">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adauga eveniment:"
        android:textColor="@color/fadcd5"
        android:textStyle="bold|italic"
        android:id="@+id/addEventsText"
        android:gravity="center"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_events"
        android:layout_below="@id/addEventsText"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:hint="Denumire eveniment"
            android:textColorHint="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:id="@+id/added_event"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:hint="Alege ora inceput"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:inputType="none"
            android:id="@+id/start_time"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/added_event"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_background"
            app:backgroundTint="@color/a765d67"
            android:hint="Alege ora sfarsit"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="italic"
            android:gravity="center"
            android:inputType="none"
            android:id="@+id/end_time"
            android:layout_alignParentStart="true"
            android:layout_below="@id/start_time"
            android:layout_marginTop="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:backgroundTint="@color/a765d67"
            android:text="Adaugare"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:id="@+id/addBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:padding="2dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evenimente din aceasta zi:"
        android:textColor="@color/fadcd5"
        android:textStyle="bold|italic"
        android:id="@+id/todayEvents"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/add_events" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/events_viewer"
        android:layout_below="@+id/todayEvents"
        android:layout_marginTop = "20dp"
        android:padding="5dp"
        />

</RelativeLayout>
