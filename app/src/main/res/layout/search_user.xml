<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:id="@+id/searchUserPage"
    tools:context=".SearchUser">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@id/goBackBtn"
        android:text="."
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:background="@android:color/transparent"
        android:drawableTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search_view"
        android:text="         Cautare utilizator"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="@color/fadcd5"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"

        android:layout_toEndOf="@+id/goBackBtn"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search_user"
        android:background="@drawable/rounded_corners_background"
        android:drawableTint="@color/fadcd5"
        android:hint="Tasteaza aici"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_below="@+id/search_view"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:elevation="20dp"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@+id/searchBtn"
        android:gravity="center"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchBtn"
        android:drawableLeft="@drawable/baseline_search_24"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/search_view"
        android:background="@android:color/transparent"
        android:drawableTint="@color/white"
        android:layout_margin="4dp"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user_viewer"
        android:layout_below="@+id/searchBtn"
        android:layout_marginTop = "20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/gradient_background_menu"
        />
</RelativeLayout>
